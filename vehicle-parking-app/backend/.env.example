# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database
# SQLite database path is configured in config.py

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1


# Google Chat Webhook (for Google Chat notifications)
# Get this from Google Chat -> Apps & integrations -> Incoming webhooks
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/YOUR_SPACE/messages?key=YOUR_KEY&token=YOUR_TOKEN

# Twilio SMS Configuration (for SMS notifications)
# Get these from your Twilio dashboard
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key

MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=Parking App <noreply@parkingapp.local>
